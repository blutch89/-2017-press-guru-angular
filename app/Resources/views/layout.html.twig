<!DOCTYPE html>
<html ng-app="pressGuruApp" xmlns:og="http://ogp.me/ns#">
<head>
    <meta charset="UTF-8" />

    <title>Press Guru</title>
    <meta name="description" content="Application de gestion de contenu de presse." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}" />

    <meta property="og:title" content="Press guru" />
    <meta property="og:description" content="Application de gestion de contenu de presse développé avec Symfony2, jQuery et AngularJS en responsive design." />
    <meta property="og:url" content="http://www.thomasgigon.ch/press-guru" />
    <meta property="og:image" content="{{ asset('favicon.png') }}" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    
    {% stylesheets
        'bundles/press-guru/css/main.css' %}
    
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
</head>
<body>
    {% block body %}

    {% endblock %}

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.2/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.2/angular-animate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.2/angular-touch.js"></script>
    <script src="https://code.angularjs.org/1.6.2/angular-route.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    {% javascripts
        'bundles/press-guru/js/library/ui-bootstrap-tpls-2.5.0.min.js'
        'bundles/press-guru/js/library/spin.min.js'
        'bundles/press-guru/js/library/bootbox.min.js'
        'bundles/press-guru/js/preAngular.js' %}
    
    <script src="{{ asset_url }}"></script>
	{% endjavascripts %}
    
    
    
    {% block js %}
    
    {% endblock %}
    
    <script>
        angular.module('pressGuruApp').constant("csrftoken", "{{ csrf_token('') }}");
    </script>
    
</body>
</html>
